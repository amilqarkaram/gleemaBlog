    </div>
  <%}%>
  <% if(accessLevel === "admin"){ %>
  <% console.log(postPath) %>
  <div class="footer-class">
    <div class="form-post">
      <form action= <%=postPath%> method="Post" enctype="multipart/form-data">
        <div class="form-row">
          <div style="text-align:left;" class="form-group col-md-8">
            <label for="postTitle">Title</label>
            <textarea class="form-control" name="postTitle" cols="100" rows="1" placeholder="Secrets to Finding Great Music"></textarea>
          </div>
          <div style="text-align:left;" class="form-group col-md-4">
            <label for="postDate">Date</label>
            <textarea class="form-control" name="postDate" cols="40" rows="1" placeholder="August 1, 2020"></textarea>
          </div>
        </div>
        <div class="form-row">
          <div style="text-align:left;" class="form-group col-md-12">
            <label for="postBody">Post</label>
            <textarea placeholder="Write some content here"class="form-control" name="postBody" cols="160" rows="5"></textarea>
          </div>
        </div>
        <div class="form-row">
          <div style="text-align:left;" class="form-group col">
            <input type="file" name="testImage" accept="image/*">
          </div>
        </div>
        <div class="form-row">
          <div style="text-align:left;" class="form-group col">
            <button class="btn btn-primary" type="submit" name="button">Publish</button>
          </div>
        </div>
      </form>
    </div>
      <%- include('partials/footer'); -%>
  <% } else{ %>
    <div class="footer-class">
      <%- include('partials/footer'); -%>
    </div>
  <% } %>
  </div>
</div>
