  <div class="postBox">
    <img class="postImage"src="images/ss" alt="oops... Nothing loaded">
    <hr><h1>Hello, My Name is Gleema</h1><hr>
    <p style="text-align: left">ðŸ•ž August 1, 2020</p>
    <p> <%= about.substring(0,300) + "..." %> </p>
    <hr style="width: 50px"><a href="/">Read more</a><hr style="width: 50px;">
    <!-- <p><%=about%></p> -->
  </div>
  <%for(var i = 0; i < posts.length;++i) {%>
    <div class="postBox">
      <img src="data:image/png;base64,<%=imgSrc%>" alt="alternate image">
      <hr><h1><%=posts[i].postTitle%></h1><hr>
      <p style="text-align: left">ðŸ•ž <%=posts[i].postDate%></p>
